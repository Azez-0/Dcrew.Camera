<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Dcrew.Camera</RootNamespace>
    <Authors>Dcrew</Authors>
    <Description>A highly-optimized, flexible and powerful 2D camera for MonoGame</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/DeanReynolds/Dcrew.Camera</RepositoryUrl>
    <PackageTags>MonoGame</PackageTags>
    <Company>DcrewGames</Company>
    <PackageId>Dcrew.Camera</PackageId>
    <Version>1.5.3</Version>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="MonoGame.Framework.DesktopGL.Core" PrivateAssets="All" Version="3.7.0.7" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
